@model HotelBK.Models.Booking

<div class="booking-details">
    <div class="card mb-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thông tin khách hàng</h5>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Họ và tên:</div>
                <div class="col-md-8">@Model.FullName</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Email:</div>
                <div class="col-md-8">@Model.Email</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Số điện thoại:</div>
                <div class="col-md-8">@Model.Phone</div>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Thông tin đặt phòng</h5>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Phòng:</div>
                <div class="col-md-8">@Model.Room.RoomName (@Model.Room.RoomType?.TypeName)</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Giá phòng:</div>
                <div class="col-md-8">@Model.Room.Price.ToString("N0") VNĐ/đêm</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Số lượng phòng:</div>
                <div class="col-md-8">@Model.RoomCount</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Ngày nhận phòng:</div>
                <div class="col-md-8">@Model.CheckInDate.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Ngày trả phòng:</div>
                <div class="col-md-8">@Model.CheckOutDate.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Số đêm:</div>
                <div class="col-md-8">@ViewBag.TotalDays</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Tổng tiền:</div>
                <div class="col-md-8 fs-5 text-danger fw-bold">@ViewBag.TotalAmount.ToString("N0") VNĐ</div>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Trạng thái</h5>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Trạng thái hiện tại:</div>
                <div class="col-md-8">
                    @switch (Model.Status)
                    {
                        case "Pending":
                            <span class="badge bg-warning">Chờ xác nhận</span>
                            break;
                        case "Confirmed":
                            <span class="badge bg-info">Đã xác nhận</span>
                            break;
                        case "Checked-in":
                            <span class="badge bg-primary">Đã nhận phòng</span>
                            break;
                        case "Checked-out":
                            <span class="badge bg-success">Đã trả phòng</span>
                            break;
                        case "Cancelled":
                            <span class="badge bg-danger">Đã hủy</span>
                            break;
                        default:
                            <span class="badge bg-secondary">@Model.Status</span>
                            break;
                    }
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Ngày tạo:</div>
                <div class="col-md-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <button type="button" class="btn btn-primary editBooking" data-id="@Model.BookingID">Sửa đặt phòng</button>
        <div class="btn-group ms-2">
            <button type="button" class="btn btn-info dropdown-toggle" data
            <button type="button" class="btn btn-primary editBooking" data-id="@Model.BookingID">Sửa đặt phòng</button>
            <div class="btn-group ms-2">
                <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    Đổi trạng thái
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item change-status" href="#" data-id="@Model.BookingID" data-status="Pending">Chờ xác nhận</a></li>
                    <li><a class="dropdown-item change-status" href="#" data-id="@Model.BookingID" data-status="Confirmed">Đã xác nhận</a></li>
                    <li><a class="dropdown-item change-status" href="#" data-id="@Model.BookingID" data-status="Checked-in">Đã nhận phòng</a></li>
                    <li><a class="dropdown-item change-status" href="#" data-id="@Model.BookingID" data-status="Checked-out">Đã trả phòng</a></li>
                    <li><a class="dropdown-item change-status" href="#" data-id="@Model.BookingID" data-status="Cancelled">Đã hủy</a></li>
                </ul>
            </div>
            <button type="button" class="btn btn-danger ms-2 deleteBooking" data-id="@Model.BookingID">Xóa</button>
            <button type="button" class="btn btn-secondary ms-2" data-bs-dismiss="modal">Đóng</button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Xử lý nút sửa
        $(".editBooking").click(function () {
            var id = $(this).data("id");
            $.get("/Admin/Bookings/Edit/" + id, function (data) {
                $("#bookingModalTitle").text("Chỉnh sửa đặt phòng");
                $("#bookingModalBody").html(data);
            });
        });

        // Xử lý đổi trạng thái
        $(".change-status").click(function (e) {
            e.preventDefault();
            var id = $(this).data("id");
            var status = $(this).data("status");

            if (confirm("Bạn có chắc muốn đổi trạng thái đặt phòng này thành '" + status + "'?")) {
                $.ajax({
                    url: "/Admin/Bookings/ChangeStatus",
                    type: "POST",
                    data: { id: id, status: status },
                    success: function () {
                        $("#bookingModal").modal("hide");
                        location.reload();
                    },
                    error: function (xhr) {
                        alert(xhr.responseText || "Có lỗi xảy ra khi đổi trạng thái!");
                    }
                });
            }
        });

        // Xử lý xóa đặt phòng
        $(".deleteBooking").click(function () {
            var id = $(this).data("id");
            if (confirm("Bạn có chắc muốn xóa đặt phòng này?")) {
                $.ajax({
                    url: "/Admin/Bookings/Delete/" + id,
                    type: "POST",
                    success: function () {
                        $("#bookingModal").modal("hide");
                        location.reload();
                    },
                    error: function (xhr) {
                        alert(xhr.responseText || "Có lỗi xảy ra khi xóa đặt phòng!");
                    }
                });
            }
        });
    });
</script>