@model HotelBK.Models.Room

<form id="roomForm" enctype="multipart/form-data">
    <input type="hidden" asp-for="RoomID" />

    <div class="form-group mb-3">
        <label>Tên Phòng</label>
        <input asp-for="RoomName" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Loại Phòng</label>
        <select asp-for="RoomTypeID" asp-items="ViewBag.RoomTypes" class="form-select" required>
            <option value="">-- Chọn loại phòng --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Giá</label>
        <input asp-for="Price" type="number" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Số sao</label>
        <input asp-for="StarRating" type="number" min="1" max="5" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Số giường</label>
        <input asp-for="Beds" type="number" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Số phòng tắm</label>
        <input asp-for="Bathrooms" type="number" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group mb-3">
        <label>Trạng thái</label>
        <select asp-for="Status" class="form-select">
            <option value="Available">Còn trống</option>
            <option value="Maintenance">Bảo trì</option>
            <option value="Unavailable">Không khả dụng</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Ảnh</label>
        <input type="file" name="imageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="mt-2">
                <img src="@Model.Image" alt="@Model.RoomName" width="100" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
</form>

<script>
    $(document).ready(function () {
        $("#roomForm").submit(function (event) {
            event.preventDefault();
            var formData = new FormData(this);

            $.ajax({
                url: "/Admin/Rooms/CreateOrUpdate",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    $("#roomModal").modal("hide");
                    location.reload();
                },
                error: function (xhr) {
                    alert(xhr.responseText || "Có lỗi xảy ra!");
                }
            });
        });
    });
</script>