@model HotelBK.Models.Room

<form id="roomForm">
    <input type="hidden" asp-for="RoomID" />

    <div class="form-group">
        <label>Tên Phòng</label>
        <input asp-for="RoomName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Price" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Giường</label>
        <input asp-for="Beds" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Phòng Tắm</label>
        <input asp-for="Bathrooms" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Ảnh</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
</form>

<script>
    $(document).ready(function () {
        $("#roomForm").submit(function (event) {
            event.preventDefault();
            var formData = new FormData(this);

            $.ajax({
                url: "/Admin/Rooms/CreateOrUpdate",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    $("#roomModal").modal("hide");
                    location.reload();
                },
                error: function () {
                    alert("Có lỗi xảy ra!");
                }
            });
        });
    });
</script>
