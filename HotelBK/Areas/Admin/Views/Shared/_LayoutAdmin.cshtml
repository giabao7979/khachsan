<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Hotel</title>

    <!-- Favicons -->
    <link href="~/admin/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/admin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/admin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/admin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/admin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/admin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/admin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/admin/assets/css/style.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="AdminHome" class="logo d-flex align-items-center">
                <span class="d-none d-lg-block">Admin</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Search Bar -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->
                <!-- Phần code thông báo cho biểu tượng chuông -->
                <li class="nav-item dropdown">
                    <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
                        <i class="bi bi-bell"></i>
                        <span class="badge bg-primary badge-number notification-count-room">0</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications">
                        <li class="dropdown-header">
                            Thông báo phòng mới
                            <a href="#" id="markAllRoomRead"><span class="badge rounded-pill bg-primary p-2 ms-2">Đánh dấu đã đọc</span></a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <div id="roomNotificationItems">
                            <!-- Các thông báo về phòng sẽ được thêm vào đây bằng JavaScript -->
                        </div>
                        <li class="dropdown-footer">
                            <a href="#" id="viewAllRoomNotifications">Xem tất cả thông báo</a>
                        </li>
                    </ul>
                </li>

                <!-- Phần code thông báo cho biểu tượng tin nhắn -->
                <li class="nav-item dropdown">
                    <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
                        <i class="bi bi-chat-left-text"></i>
                        <span class="badge bg-success badge-number notification-count-message">0</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow messages">
                        <li class="dropdown-header">
                            Tin nhắn liên hệ mới
                            <a href="#" id="markAllMessageRead"><span class="badge rounded-pill bg-primary p-2 ms-2">Đánh dấu đã đọc</span></a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <div id="messageNotificationItems">
                            <!-- Các thông báo về tin nhắn liên hệ sẽ được thêm vào đây bằng JavaScript -->
                        </div>
                        <li class="dropdown-footer">
                            <a href="#" id="viewAllMessageNotifications">Xem tất cả tin nhắn</a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/admin/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">Admin</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>Admin</h6>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="#">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="/Admin/AdminHome">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-heading">Quản lý</li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/User">
                    <i class="ri-user-3-fill"></i><span>Người dùng</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Rooms">
                    <i class="ri-store-2-fill"></i><span>Phòng</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Bookings">
                    <i class="ri-calendar-check-line"></i><span>Đặt phòng</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Payments">
                    <i class="ri-paypal-fill"></i><span>Thanh toán</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Reports/Revenue">
                    <i class="ri-bar-chart-box-line"></i><span>Báo cáo doanh thu</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Roles">
                    <i class="ri-contacts-line"></i><span>Phân quyền</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/ContactMessages">
                    <i class="ri-mail-line"></i><span>Tin nhắn liên hệ</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Reviews">
                    <i class="ri-chat-quote-line"></i><span>Bình luận</span>
                </a>
            </li>
            <li class="nav-heading">Trở lại</li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="https://localhost:7126">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Trở về trang chủ</span>
                </a>
            </li>


        </ul>

    </aside>
    <!-- End Sidebar-->

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center mt-4">
        <p>&copy; 2025 HotelBK Admin Panel. All rights reserved.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Vendor JS Files -->
    <script src="~/admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/admin/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/admin/assets/vendor/quill/quill.js"></script>
    <script src="~/admin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/admin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/admin/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script defer src="~/admin/assets/js/main.js"></script>
    <!-- Script xử lý thông báo -->
    <script src="~/admin/assets/js/notifications.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
