@model HotelBK.Models.Booking
@{
    ViewData["Title"] = "Xác nhận đặt phòng";
}

<div>
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 p-0" style="background-image: url(/img/carousel-1.jpg);">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center pb-5">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Xác nhận đặt phòng</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center text-uppercase">
                        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="/Room">Phòng</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Xác nhận đặt phòng</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <div class="container-xxl py-5">
        <div class="container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-primary text-white py-3">
                            <h4 class="mb-0 text-center">Chi tiết đặt phòng của bạn</h4>
                        </div>
                        <div class="card-body p-4">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-3">
                                        <i class="fa fa-check-circle text-success me-2"></i>
                                        <h5 class="mb-0">Đặt phòng thành công!</h5>
                                    </div>
                                    <p>Mã đặt phòng: <strong>#@Model.BookingID</strong></p>
                                    <p>Ngày đặt: <strong>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong></p>
                                </div>
                                <div class="col-md-6 text-md-end">
                                    <p>
                                        Trạng thái:
                                        <span class="badge bg-warning">@Model.Status</span>
                                    </p>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <h5 class="mb-3">Thông tin khách hàng</h5>
                                    <p><strong>Họ tên:</strong> @Model.FullName</p>
                                    <p><strong>Email:</strong> @Model.Email</p>
                                    <p><strong>Số điện thoại:</strong> @Model.Phone</p>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="mb-3">Thông tin phòng</h5>
                                    <p><strong>Tên phòng:</strong> @Model.Room.RoomName</p>
                                    <p><strong>Loại phòng:</strong> @Model.Room.RoomType?.TypeName</p>                          
                                    <p><strong>Số người:</strong> @Model.RoomCount</p>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <h5 class="mb-3">Thời gian đặt phòng</h5>
                                    <p><strong>Ngày nhận phòng:</strong> @Model.CheckInDate.ToString("dd/MM/yyyy")</p>
                                    <p><strong>Ngày trả phòng:</strong> @Model.CheckOutDate.ToString("dd/MM/yyyy")</p>
                                    <p><strong>Số đêm:</strong> @ViewBag.TotalDays</p>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="mb-3">Thông tin thanh toán</h5>
                                    <p><strong>Giá phòng:</strong> @Model.Room.Price.ToString("N0") VNĐ/đêm</p>
                                    <p><strong>Tổng tiền:</strong> <span class="text-primary font-weight-bold">@ViewBag.TotalAmount.ToString("N0") VNĐ</span></p>
                                    <p><small class="text-muted">* Thanh toán tại quầy lễ tân khi nhận phòng</small></p>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="text-center">
                                <p class="mb-3">Vui lòng lưu lại thông tin đặt phòng để check-in. Chúng tôi đã gửi xác nhận đến email của bạn.</p>
                                <a href="/Booking/MyBookings" class="btn btn-primary me-2">Xem đặt phòng của tôi</a>
                                <a href="/Room" class="btn btn-outline-primary">Tiếp tục xem phòng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>