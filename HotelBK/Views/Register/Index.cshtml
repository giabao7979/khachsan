@{
    ViewData["Title"] = "Đăng ký";
}
<div>
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4">
                <div>
                    <div class="wow fadeInUp" data-wow-delay="0.2s">
                        <form method="post" action="/Register/Index" class="container mt-5 p-4 rounded-4 shadow" style="max-width: 500px; background-color: white;">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                </div>
                            }

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["ErrorMessage"]
                                </div>
                            }

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                            <h2 class="text-center mb-4">Đăng ký</h2>
                            <div class="mb-3">
                                <label for="fullName" class="form-label">Họ và Tên</label>
                                <input type="text" name="fullName" class="form-control rounded-3" id="fullName" placeholder="Nhập họ và tên" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" name="email" class="form-control rounded-3" id="email" placeholder="Nhập email" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Số điện thoại</label>
                                <input type="text" name="phone" class="form-control rounded-3" id="phone" placeholder="Nhập số điện thoại" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <input type="password" name="password" class="form-control rounded-3" id="password" placeholder="Nhập mật khẩu" required>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                                <input type="password" name="confirmPassword" class="form-control rounded-3" id="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                            </div>
                            <button class="btn btn-primary w-100 py-2 rounded-3" type="submit">Đăng ký</button>
                            <p class="text-center mt-3">Bạn đã có tài khoản? <a href="/Login" class="text-primary">Đăng nhập</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Newsletter Start -->
    <div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="row justify-content-center">
            <div class="col-lg-10 border rounded p-1">
                <div class="border rounded text-center p-1">
                    <div class="bg-white rounded text-center p-5">
                        <h4 class="mb-4">Đăng ký bản tin của chúng tôi </h4>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control w-100 py-3 ps-4 pe-5" type="text" placeholder="Nhập email của bạn">
                            <button type="button" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">Xác nhận</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Newsletter Start -->
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Kiểm tra mật khẩu nhập lại
            $('form').on('submit', function(e) {
                var password = $('#password').val();
                var confirmPassword = $('#confirmPassword').val();

                if (password !== confirmPassword) {
                    e.preventDefault();
                    alert("Mật khẩu xác nhận không khớp với mật khẩu đã nhập!");
                    return false;
                }

                return true;
            });
        });
    </script>
}