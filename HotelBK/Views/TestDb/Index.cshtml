@{
    ViewData["Title"] = "Kiểm tra kết nối Database";
}

<div class="container mt-4">
    <h1 class="mb-4">Kiểm tra kết nối Database</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Thông tin Database</h5>
        </div>
        <div class="card-body">
            <p><strong>Connection String:</strong> @ViewBag.DatabaseInfo.ConnectionString</p>
            <p><strong>Provider:</strong> @ViewBag.DatabaseInfo.ProviderName</p>
            <p><strong>DbSet trong Context:</strong> @ViewBag.DatabaseInfo.DbSetNames</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Danh sách bảng trong database</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.TableError != null)
            {
                <div class="alert alert-danger">@ViewBag.TableError</div>
            }
            else if (ViewBag.TableNames?.Count > 0)
            {
                <ul>
                    @foreach (var tableName in ViewBag.TableNames)
                    {
                        <li>@tableName</li>
                    }
                </ul>
            }
            else
            {
                <p>Không tìm thấy bảng nào.</p>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Dữ liệu RoomTypes (SQL)</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.RoomTypesError != null)
            {
                <div class="alert alert-danger">@ViewBag.RoomTypesError</div>
            }
            else if (ViewBag.RoomTypesData?.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>RoomTypeID</th>
                            <th>TypeName</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.RoomTypesData)
                        {
                            <tr>
                                <td>@item.RoomTypeID</td>
                                <td>@item.TypeName</td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Không tìm thấy dữ liệu.</p>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Lỗi Entity Framework</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.EFError != null)
            {
                <div class="alert alert-danger">@ViewBag.EFError</div>
            }
            else
            {
                <p>Không có lỗi.</p>
            }
        </div>
    </div>

    <div class="mt-4">
        <a href="/TestDb/DirectQuery" class="btn btn-primary">Truy vấn trực tiếp SQL</a>
        <a href="/TestDb/CheckModel" class="btn btn-info">Kiểm tra Entity Model</a>
    </div>
</div>